<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_settings_notifications"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="5dp"
    android:background="#f2f2f5"
    tools:context="app.garvinen.leadtheway.SettingsNotificationsActivity">

    <TextView
        android:id="@+id/HeaderSettingNote"
        android:text="Inställningar notifikationer"
        android:textSize="20sp"
        android:textColor="#2b2a2a"
        android:background="@drawable/custom_header"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        />

    <TextView
        android:id="@+id/LabelNotification"
        android:text="Ställ in tid för dina notifikationer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="#2b2a2a"
        android:layout_marginBottom="20sp"
        android:layout_marginTop="20sp" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <EditText
        android:id="@+id/notField1"
        android:layout_marginTop="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:layout_weight="5"
        android:layout_gravity="left"
        android:text="Name"
        android:background="@drawable/custom_edit_text_field" />

    <Spinner
        android:id="@+id/firstMinSpinner"
        android:layout_height="30sp"
        android:layout_width="5sp"
        android:spinnerMode="dropdown"
        android:layout_weight="1"
        android:layout_gravity="right" />

</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <EditText
        android:id="@+id/notField2"
        android:layout_marginTop="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:layout_weight="5"
        android:layout_gravity="left"
        android:text="Name"
        android:background="@drawable/custom_edit_text_field" />

        <Spinner
            android:id="@+id/secondMinSpinner"
            android:spinnerMode="dropdown"
            android:layout_width="5sp"
            android:layout_height="30sp"
            android:layout_weight="1"
            android:layout_gravity="right" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <EditText
        android:id="@+id/notField3"
        android:layout_marginTop="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:layout_weight="5"
        android:layout_gravity="left"
        android:text="Name"
        android:background="@drawable/custom_edit_text_field" />

        <Spinner
            android:id="@+id/thirdMinSpinner"
            android:spinnerMode="dropdown"
            android:layout_width="5sp"
            android:layout_height="30sp"
            android:layout_weight="1"
            android:layout_gravity="right" />

    </LinearLayout>

    <Button
        android:id="@+id/ButtonAdd"
        android:text="Lägg till"
        android:layout_marginTop="20sp"
        android:layout_width="100sp"
        android:layout_height="32dp"
        android:textColor="#FFFFFF"
        android:background="@drawable/next_button"/>

    <Button
        android:id="@+id/buttonNext"
        android:text="Nästa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:layout_marginTop="150sp"
        android:background="@drawable/next_button"
        />

</LinearLayout>

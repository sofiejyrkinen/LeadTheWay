<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_notification_adder"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:paddingBottom="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="5dp"
    android:background="@drawable/custom_window"
    tools:context="app.garvinen.leadtheway.NotificationAdder">

    <TextView
        android:text="Lägg till notifikation"
        android:textSize="20sp"
        android:textColor="#2b2a2a"
        android:background="@drawable/custom_header"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:id="@+id/HeaderSearch"/>

    <Button
        android:id="@+id/buttonClose"
        android:text="X"
        android:textColor="#2b2a2a"
        android:textSize="20sp"
        android:layout_width="35sp"
        android:layout_height="35sp"
        android:layout_gravity="right"
        android:background="#f2f2f5" />


    <TextView
        android:id="@+id/LabelChoose"
        android:text="Välj icon, namn och adress:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="#2b2a2a"
        android:layout_marginBottom="20sp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editText1"
            android:layout_marginTop="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:layout_weight="2"
            android:layout_gravity="left"
            android:text="Name"
            android:background="@drawable/custom_edit_text_field" />

        <Spinner
            android:id="@+id/spinner"
            android:spinnerMode="dropdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="right"
            android:text="Hejhopp" />

    </LinearLayout>

    <Button
        android:text="Spara"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:layout_marginTop="20sp"
        android:background="@drawable/next_button"
        android:id="@+id/buttonSave"
        android:onClick="buttonClick"/>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_icon_adder"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="5dp"
    tools:context="app.garvinen.leadtheway.IconAdder">


    <TextView
        android:text="Välj icon"
        android:textSize="20sp"
        android:textColor="#2b2a2a"
        android:background="@drawable/custom_header"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:id="@+id/HeaderSearch"/>



    <Button
        android:id="@+id/buttonClose"
        android:text="X"
        android:textColor="#2b2a2a"
        android:textSize="20sp"
        android:layout_width="35sp"
        android:layout_height="35sp"
        android:layout_gravity="right"
        android:background="#f2f2f5" />


    <TextView
        android:id="@+id/LabelChoose"
        android:text="Välj en ny icon:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_marginBottom="20sp"
        android:textColor="#2b2a2a"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <ImageView
        android:layout_width="78dp"
        android:layout_height="66dp"
        app:srcCompat="@drawable/Activity"
        android:id="@+id/imageView" />

    <ImageView
        android:layout_width="83dp"
        android:layout_height="68dp"
        app:srcCompat="@drawable/Boy"
        android:id="@+id/imageView2" />

    </LinearLayout>

    <Button
        android:text="Spara"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:layout_marginTop="20sp"
        android:background="@drawable/next_button"
        android:id="@+id/buttonSave"
        android:onClick="buttonClick"/>


</LinearLayout>

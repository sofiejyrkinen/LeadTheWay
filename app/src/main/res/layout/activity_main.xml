<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="5dp"
    android:background="#f2f2f5"
    tools:context="app.garvinen.leadtheway.MainActivity">

    <TextView
        android:text="Sök resa"
        android:textSize="20sp"
        android:textColor="#2b2a2a"
        android:background="@drawable/custom_header"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:id="@+id/HeaderSearch"/>

    <TextView
        android:text="Jag vill åka från:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="#2b2a2a"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="20dp"
        android:id="@+id/LabelGoFrom" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/iconsList1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"/>


    </RelativeLayout>



    <ListView
        android:id="@+id/addresList1"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#FFFFFF" />

    <TextView
        android:text="Jag vill åka till:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30sp"
        android:layout_marginBottom="10dp"
        android:textSize="15sp"
        android:textColor="#2b2a2a"
        android:id="@+id/LabelGoToo" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/iconsList2"
            android:layout_width="wrap_content"
            android:layout_height="100sp"
            android:layout_marginBottom="10dp"/>


    </LinearLayout>


    <ListView
        android:id="@+id/addresList2"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#FFFFFF" />
        />

    <Button
        android:text="Nästa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:layout_marginTop="30sp"
        android:background="@drawable/next_button"
        android:id="@+id/buttonNext" />


</LinearLayout>
